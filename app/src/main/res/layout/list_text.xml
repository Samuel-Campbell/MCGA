<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cast_ic_expanded_controller_stop"
            android:id="@+id/imageView"
            android:layout_marginEnd="32dp"
            android:layout_alignTop="@+id/customListView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

        <com.concordia.mcga.adapters.AutoResizeTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/customListView"
            android:ellipsize="none"
            android:maxLines="2"
            android:textAlignment="center"
            android:textSize="80sp"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:background="@color/button_secondary_color"
            android:textColor="@color/cast_expanded_controller_ad_label_background_color"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/imageView"
            android:layout_marginEnd="14dp" />
    </RelativeLayout>

</LinearLayout>